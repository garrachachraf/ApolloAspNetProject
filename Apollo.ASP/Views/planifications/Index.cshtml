@model IEnumerable<Apollo.Domain.entities.planification>

@{
    ViewBag.Title = "Planifications";
    Layout = "~/Views/Shared/FinancerLayout.cshtml";
}

<h2>Planifications</h2>
<br />
    <div>
        @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-primary" })
    </div>
<br />

<div class="ibox-content">
    <table class="table table-striped table-bordered table-hover dataTables-example">
        <tr>
            <th>
                @*@Html.DisplayNameFor(planification => planification.startDate)*@
                Start Date
            </th>
            <th>
                Finish Date
            </th>
            <th>
                Description
            </th>
            <th>
                Income Source
            </th>
            <th>
                Amount
            </th>
            <th>
                Period
            </th>
            <th>
                Update Date
            </th>
            <th>
                Updated By
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var planification in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => planification.startDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.finishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.incomeSource)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.period)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.updateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => planification.financer.lastname)
                </td>
                <td>
                    @Html.ActionLink("Update", "Edit", new { id = planification.id }, new { @class = "btn btn-outline btn-warning" })  
                    @Html.ActionLink("Details", "Details", new { id = planification.id }, new { @class = "btn btn-outline btn-info" })  
                    @Html.ActionLink("Delete", "Delete", new { id = planification.id }, new { @class = "btn btn-outline btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
